// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model users {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  files    files[]
  folders  folders[]
  shares   share[]
}

model folders {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  name      String
  parent    folders?  @relation("folder_parent", fields: [parent_id], references: [id], onDelete: Cascade)
  parent_id String?
  folders   folders[] @relation("folder_parent")
  files     files[]
  owner     users     @relation(fields: [usersId], references: [id])
  usersId   Int
}

model files {
  id         String   @id @default(dbgenerated("gen_random_uuid()"))
  parent_id  String?
  usersId    Int
  name       String
  size       Int?
  path       String?
  type       String?
  created_at DateTime @default(now())
  parent     folders? @relation(fields: [parent_id], references: [id], onDelete: Cascade)
  owner      users    @relation(fields: [usersId], references: [id])
  shares     share[]
}

model share {
  id         String @id @default(dbgenerated("gen_random_uuid()"))
  user       users  @relation(fields: [users_id], references: [id])
  users_id   Int
  file       files  @relation(fields: [file_id], references: [id])
  file_id    String
  url        String
  expires_at String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
