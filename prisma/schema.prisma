// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model users {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  files    files[]
  folders  folders[]
}

model folders {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  name      String
  parent    folders?  @relation("folder_parent", fields: [parent_id], references: [id])
  parent_id String?
  folders   folders[] @relation("folder_parent")
  files     files[]
  owner     users     @relation(fields: [usersId], references: [id])
  usersId   Int
}

model files {
  id           String   @id @default(dbgenerated("gen_random_uuid()"))
  parent_id    String?
  usersId      Int
  name         String
  size         Int?
  url          String?
  type         String?
  created_at   DateTime @default(now())
  storage_name String
  parent       folders? @relation(fields: [parent_id], references: [id])
  owner        users    @relation(fields: [usersId], references: [id])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
